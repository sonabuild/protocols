{
  "name": "@sonabuild/protocols",
  "version": "0.0.7",
  "type": "module",
  "description": "Open-source protocol definitions for Sona attested transactions",
  "author": "Asymmetric Information Inc.",
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sonabuild/protocols.git"
  },
  "homepage": "https://sona.build",
  "bugs": {
    "url": "https://github.com/sonabuild/protocols/issues"
  },
  "keywords": [
    "sona",
    "solana",
    "attestation",
    "protocol",
    "defi",
    "solend",
    "jupiter",
    "transaction",
    "enclave",
    "tee"
  ],
  "files": [
    "dist",
    "README.md",
    "SECURITY.md"
  ],
  "exports": {
    "./enclave": "./dist/enclave.bundle.js",
    "./solend": "./dist/solend.bundle.js",
    "./jupiter": "./dist/jupiter.bundle.js",
    "./wallet": "./dist/wallet.bundle.js",
    "./registry": "./dist/registry.bundle.js"
  },
  "scripts": {
    "test": "bun test --preload ./tests/setup.js",
    "test:coverage": "bun test --preload ./tests/setup.js --coverage",
    "build": "mkdir -p dist && bun run build:enclave && bun run build:solend && bun run build:jupiter && bun run build:wallet && bun run build:registry",
    "build:enclave": "bun x esbuild src/enclave.js --bundle --minify --platform=node --target=node20 --format=esm --outfile=dist/enclave.bundle.js --external:node:*",
    "build:solend": "bun x esbuild src/protocols/solend/index.js --bundle --minify --platform=node --target=node20 --format=esm --outfile=dist/solend.bundle.js --external:node:*",
    "build:jupiter": "bun x esbuild src/protocols/jupiter/index.js --bundle --minify --platform=node --target=node20 --format=esm --outfile=dist/jupiter.bundle.js --external:node:*",
    "build:wallet": "bun x esbuild src/protocols/wallet/index.js --bundle --minify --platform=node --target=node20 --format=esm --outfile=dist/wallet.bundle.js --external:node:*",
    "build:registry": "bun x esbuild src/registry.js --bundle --minify --platform=node --target=node20 --format=esm --outfile=dist/registry.bundle.js --external:node:*",
    "build:check": "bun --eval \"Promise.all([import('./dist/enclave.bundle.js'), import('./dist/solend.bundle.js'), import('./dist/jupiter.bundle.js'), import('./dist/wallet.bundle.js'), import('./dist/registry.bundle.js')]).then(() => console.log('✓ All bundles import successfully')).catch(e => { console.error('✗ Bundle import failed:', e.message); process.exit(1); })\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun test && bun run build && bun run build:check",
    "patch": "bun test && bun run build && npm version patch && npm publish",
    "minor": "bun test && bun run build && npm version minor && npm publish",
    "major": "bun test && bun run build && npm version major && npm publish"
  },
  "dependencies": {
    "@solana/addresses": "^4.0.0",
    "@solana/instructions": "^4.0.0",
    "@solana/transaction-messages": "^4.0.0",
    "@solana/transactions": "^4.0.0",
    "@solana/functional": "^4.0.0",
    "@solana/rpc": "^4.0.0",
    "@solana/compat": "^4.0.0",
    "zod": "^3.25.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "dotenv": "^16.4.5"
  }
}
